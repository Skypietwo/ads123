<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DetailsActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">





        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ID:"
            android:textSize="20sp"
            android:id="@+id/pcid"
            android:layout_marginBottom="10dp" />



        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:hint="CPF:"
            android:id="@+id/pcpf_cli"
            android:layout_marginTop="10dp"
            android:inputType="number" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:hint="Nome:"
            android:id="@+id/pcod_espec"
            android:layout_marginTop="10dp"
            android:inputType="textPersonName" />

        <TextView
            android:id="@+id/pcod_prof"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Codigo"
            android:textSize="18sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:hint="telefone:"
            android:id="@+id/pcod_proced"
            android:layout_marginTop="10dp"
            android:inputType="phone" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:hint="CEP:"
            android:id="@+id/pdata_proced"
            android:layout_marginTop="10dp"
            android:inputType="number" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:hint="logradouro:"
            android:id="@+id/pdescr_proced"
            android:layout_marginTop="10dp"
            android:inputType="text" />

        <TextView
            android:id="@+id/plink_proced"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Link do Procedimento"
            android:textColor="@color/colorPrimary"
            android:textStyle="bold"
            android:clickable="true"
            android:focusable="true"
            android:onClick="openLink"
            />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:hint="Bairro:"
            android:id="@+id/paut_vis_cli"
            android:layout_marginTop="10dp"
            android:inputType="text" />





    </LinearLayout>
</ScrollView>
