<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".DetalhadoActivity">

    <!-- TextView para exibir o review -->
    <TextView
        android:id="@+id/pcdid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Review"
        android:textSize="18sp"
        android:hint="Review"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/pcdreview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Review"
        android:textSize="18sp"
        android:hint="Review"
        android:textStyle="bold"/>

    <!-- TextView para exibir o status -->
    <TextView
        android:id="@+id/pcdstatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Status:"
        android:textSize="18sp"
        android:hint="Status"
        android:textStyle="bold"
        android:layout_marginTop="16dp"/>

    <!-- TextView para exibir o código do professor -->
    <TextView
        android:id="@+id/pcdcod_prof"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Código do Professor:"
        android:textSize="18sp"
        android:hint="Codigo do Professor"
        android:textStyle="bold"
        android:layout_marginTop="16dp"/>

</LinearLayout>
